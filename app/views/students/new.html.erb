<h1><%= t('register_student') %></h1>


<%= bootstrap_form_for @student, url: {action: "create"} do |f| %>

    <%= f.text_field :forename, label: t('forename').capitalize %>
    <%= f.text_field :surname, label: t('surname').capitalize %>
    <%= f.collection_radio_buttons :sex, Student.sexes, :second, :first %>
    <%= f.date_select :birth_date, label: t('birth_date').capitalize %>
    <%= f.text_field :birth_place, label: t('birth_place').capitalize %>
    <%= f.text_area :address, label: t('address').capitalize %>

    <%= f.collection_select :confession_id, Confession.all, :id, :name, label: t('confession').capitalize %>
    <%= f.collection_select :tribe_id, Tribe.all, :id, :name, label: t('tribe').capitalize %>



