<h1><%= t('confessions').capitalize %></h1>
<p>
<%= link_to t('add_confession'), new_confession_path, { :class => "btn btn-lg btn-primary", "role" => "button" } %>
</p>
<% if @confessions.any? %>
    <br/>
    <p>
<table class="table table-hover">
  <thead>
  <tr>
    <th><%= t('name').capitalize %></th>
    <th><%= t('action') %></th>
  </tr>
  </thead>
  <tbody>
  <% @confessions.each do |confession| %>
  <tr>
    <td><%= confession.name %></td>
    <td>
      <%= link_to t('rename'), edit_confession_path(confession), { :class => "btn btn-md btn-link", "role" => "button" } %>
      <%= link_to t('delete'), confession_path(confession), method: :delete, data: { :confirm => t('are_you_sure_delete')}, :class => "btn btn-md btn-link", "role" => "button" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
    </p>
<% end %>
